    <!-- SCRIPT UTAMA -->
    <script>
        // --- 1. KONFIGURASI SUPABASE ---
        const SUPABASE_URL = 'https://nkcctncsjmcfsiguowms.supabase.co';
        const SUPABASE_KEY = 'sb_publishable_CY2GLPbRJRDcRAyPXzOD4Q_63uR5W9X';
        const supabase = supabase.createClient(SUPABASE_URL, SUPABASE_KEY);

        let currentUser = null;

        // --- 2. INIT ---
        document.addEventListener("DOMContentLoaded", async () => {
            // Cek Session
            const { data: { session }, error } = await supabase.auth.getSession();
            if (error || !session) {
                alert("Sesi habis. Silakan login.");
                window.location.href = 'login.html';
                return;
            }
            currentUser = session.user;

            // Load Data
            await loadUserProfile();
            await loadHarvestData();
        });

        // --- 3. LOAD PROFILE ---
        async function loadUserProfile() {
            const { data: profile } = await supabase
                .from('profiles')
                .select('full_name, wallet_address, role')
                .eq('id', currentUser.id)
                .single();

            if (profile) {
                document.getElementById('userName').textContent = "Halo, " + (profile.full_name.split(' ')[0] || "Petani");
                
                if(profile.wallet_address) {
                    const short = profile.wallet_address.substring(0,6) + "...";
                    document.getElementById('userWallet').innerHTML = `üîó Dompet: <b>${short}</b>`;
                } else if(profile.role === 'PETANI') {
                    document.getElementById('userWallet').innerHTML = `üåæ Status: <b>Aktif</b>`;
                }
            }
        }

        // --- 4. LOAD HARVEST DATA (LOGIC CORE) ---
        async function loadHarvestData() {
            const listContainer = document.getElementById('harvestList');
            const statTotalItems = document.getElementById('statTotalItems');
            const statTotalRevenue = document.getElementById('statTotalRevenue');

            try {
                // Ambil 5 data panen terakhir milik user ini
                const { data: panenList, error } = await supabase
                    .from('panen')
                    .select('*')
                    .eq('user_id', currentUser.id)
                    .order('created_at', { ascending: false })
                    .limit(5); // Limit 5 agar dashboard tidak kepanjangan

                if (error) throw error;

                // Update Stats
                statTotalItems.textContent = panenList.length;
                const totalRevenue = panenList.reduce((sum, item) => sum + (item.estimated_total || 0), 0);
                statTotalRevenue.textContent = formatRupiah(totalRevenue);

                // Render List
                listContainer.innerHTML = '';
                
                if (panenList.length === 0) {
                    listContainer.innerHTML = `
                        <div class="empty-state">
                            <div style="font-size:2rem; margin-bottom:10px;">üì≠</div>
                            Belum ada data panen.<br>Mulai jual hasil panen Anda sekarang!
                        </div>
                    `;
                } else {
                    panenList.forEach(item => {
                        const date = new Date(item.created_at).toLocaleDateString('id-ID', { day: 'numeric', month: 'short' });
                        const statusClass = item.status === 'pending' ? 'status-pending' : (item.status === 'sold' ? 'status-sold' : 'status-approved');
                        const statusLabel = item.status === 'pending' ? 'Menunggu' : (item.status === 'sold' ? 'Terjual' : 'Disetujui');

                        const el = document.createElement('div');
                        el.className = 'card-item';
                        el.innerHTML = `
                            <div class="item-left">
                                <div class="item-icon">üåæ</div>
                                <div class="item-details">
                                    <h4>${item.commodity_name}</h4>
                                    <p>${item.quantity} ${item.unit} ‚Ä¢ ${date}</p>
                                </div>
                            </div>
                            <div class="item-right">
                                <div class="item-price">${formatRupiah(item.estimated_total)}</div>
                                <span class="status-badge ${statusClass}">${statusLabel}</span>
                            </div>
                        `;
                        listContainer.appendChild(el);
                    });
                }

                // Render Chart
                renderChart(panenList);

            } catch (err) {
                console.error(err);
                listContainer.innerHTML = `<div class="empty-state" style="color:red;">Gagal memuat data.</div>`;
            }
        }

        // --- 5. HELPER FORMATTER ---
        function formatRupiah(number) {
            return new Intl.NumberFormat('id-ID', {
                style: 'currency',
                currency: 'IDR',
                minimumFractionDigits: 0
            }).format(number);
        }

        // --- 6. RENDER CHART ---
        function renderChart(data) {
            const ctx = document.getElementById('salesChart');
            if(!ctx) return;

            // Siapkan data dummy untuk grafik (karena data nyata mungkin sedikit)
            // Grafik menunjukkan estimasi pendapatan per item
            const labels = data.map(d => d.commodity_name.substring(0,10) + '...');
            const values = data.map(d => d.estimated_total);

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels.length ? labels : ['Data Kosong'],
                    datasets: [{
                        label: 'Estimasi Harga',
                        data: values.length ? values : [0],
                        borderColor: '#2E7D32',
                        backgroundColor: 'rgba(46, 125, 50, 0.2)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: { beginAtZero: true, display: false },
                        x: { display: false }
                    }
                }
            });
        }
    </script>
</body>

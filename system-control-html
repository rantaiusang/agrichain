    <script>
        const SUPABASE_URL = 'https://nkcctncsjmcfsiguowms.supabase.co';
        const SUPABASE_KEY = 'sb_publishable_CY2GLPbRJRDcRAyPXzOD4Q_63uR5W9X';
        const supabase = supabase.createClient(SUPABASE_URL, SUPABASE_KEY);

        let chartInstances = {};

        document.addEventListener("DOMContentLoaded", async () => {
            if(window.innerWidth <= 768) {
                document.getElementById('mobileToggle').style.display = 'block';
            }
            await initDashboard();
        });

        // --- FUNGSI REFRESH SISTEM (OWNER REQUEST) ---
        window.refreshSystem = async function() {
            const overlay = document.getElementById('loadingOverlay');
            overlay.style.display = 'flex';

            await new Promise(r => setTimeout(r, 1500)); // Delay 1.5 detik biar terasa loading

            await initDashboard(); // Panggil ulang semua fungsi load data

            overlay.style.display = 'none';
            alert("Sistem berhasil disegarkan! Data statistik & grafik kini terbaru.");
        };

        async function initDashboard() {
            try {
                const { data: { session }, error } = await supabase.auth.getSession();
                if (error || !session) {
                    window.location.href = 'login.html';
                    return;
                }

                // Cek Role Admin
                const { data: profile } = await supabase.from('profiles').select('role').eq('id', session.user.id).single();
                if (!profile || profile.role !== 'ADMIN') {
                    window.location.href = 'index.html';
                    return;
                }

                console.log("‚úÖ Admin Verified.");
                // Load semua kartu sekaligus
                await Promise.all([
                    loadOverviewStats(),
                    loadRevenueCard(),
                    loadUserGrowthCard(),
                    loadProductCard(),
                    loadNotificationCard()
                ]);

            } catch (err) {
                console.error(err);
            }
        }

        // 1. STATS
        async function loadOverviewStats() {
            try {
                const { count } = await supabase.from('profiles').select('*', { count: 'exact', head: true });
                document.getElementById('userCount').textContent = count || 0;
                const { count: commCount } = await supabase.from('market_prices').select('*', { count: 'exact', head: true });
                document.getElementById('totalCommodityCount').textContent = commCount || 0;
                const { data: panenData } = await supabase.from('panen').select('estimated_total');
                const totalRev = panenData.reduce((sum, item) => sum + (item.estimated_total || 0), 0);
                document.getElementById('statRevenue').textContent = `Rp ${totalRev.toLocaleString('id-ID')}`;
                document.getElementById('totalWeekly').textContent = `Rp ${totalRev.toLocaleString('id-ID')}`;
            } catch (err) { console.error("Error Stats:", err); }
        }

        // 2. KEUANGAN
        async function loadRevenueCard() {
            const ctx = document.getElementById('chartRevenue');
            if (!ctx) return;
            // Dummy Data Mingguan (Karena tidak ada tabel transaksi detail tanggal)
            const labels = ['Sen', 'Sel', 'Rab', 'Kam', 'Jum', 'Sab'];
            const data = [5000000, 7200000, 6800000, 9000000, 8500000, 12000000, 10500000];
            chartInstances['revenue'] = new Chart(ctx, {
                type: 'line',
                data: { labels: labels, datasets: [{ label: 'Pendapatan (Rp)', data: data, borderColor: '#43A047', backgroundColor: 'rgba(67, 160, 71, 0.2)', fill: true, tension: 0.4 }] },
                options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } } }
            });
        }

        // 3. USER GROWTH
        async function loadUserGrowthCard() {
            const ctx = document.getElementById('chartUsers');
            const listContainer = document.getElementById('recentUsers');
            if (!ctx) return;
            const { data: users, error } = await supabase.from('profiles').select('full_name, role, created_at').order('created_at', { ascending: false }).limit(10);
            if (users) {
                listContainer.innerHTML = '';
                users.forEach(u => {
                    const li = document.createElement('li');
                    li.innerHTML = `<span>${u.full_name}</span> <span style="font-size:0.75rem; padding:2px 6px; border-radius:4px; background:${u.role==='PETANI'?'#2E7D32':'#FF9800'}; color:white;">${u.role}</span>`;
                    listContainer.appendChild(li);
                });
            }
            const petaniCount = users.filter(u => u.role === 'PETANI').length;
            const pembeliCount = users.filter(u => u.role === 'PEMBELI').length;
            chartInstances['users'] = new Chart(ctx, {
                type: 'bar', data: { labels: ['Petani', 'Pembeli', 'Lembaga', 'Admin'], datasets: [{ label: 'Total Aktif', data: [petaniCount, pembeliCount, users.filter(u => u.role === 'LEMBAGA').length, users.filter(u => u.role === 'ADMIN').length], backgroundColor: ['#2E7D32', '#FF9800', '#1565C0', '#1A237E'], borderRadius: 5 }] },
                options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } } }
            });
        }

        // 4. PRODUK
        async function loadProductCard() {
            const ctx = document.getElementById('chartProducts');
            const listContainer = document.getElementById('topProducts');
            if (!ctx) return;
            const { data: panen } = await supabase.from('panen').select('commodity_name');
            const counts = {};
            panen.forEach(item => { const name = item.commodity_name; counts[name] = (counts[name] || 0) + 1; });
            const sortedCommodities = Object.entries(counts).sort((a,b) => b[1] - a[1]).slice(0, 5);
            const labels = sortedCommodities.map(c => c[0]);
            const values = sortedCommodities.map(c => c[1]);
            listContainer.innerHTML = '';
            sortedCommodities.forEach(([name, count]) => {
                const li = document.createElement('li');
                li.innerHTML = `<span>${name}</span> <strong>${count} kali</strong>`;
                listContainer.appendChild(li);
            });
            if (labels.length > 0) {
                chartInstances['products'] = new Chart(ctx, {
                    type: 'doughnut', data: { labels: labels, datasets: [{ data: values, backgroundColor: ['#2E7D32', '#FF9800', '#1565C0', '#D32F2F', '#9C27B0'], borderWidth: 0 }] },
                    options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } } }
                });
            }
        }

        // 5. NOTIFIKASI
        async function loadNotificationCard() {
            const listContainer = document.getElementById('notificationList');
            const { data: pendingPanen } = await supabase.from('panen').select('commodity_name').eq('status', 'pending').limit(3);
            listContainer.innerHTML = '';
            if(pendingPanen && pendingPanen.length > 0) {
                pendingPanen.forEach(p => {
                    const li = document.createElement('li');
                    li.style.color = '#E65100';
                    li.innerHTML = `<span>‚è≥</span> <strong>Panen Baru:</strong> ${p.commodity_name} (Menunggu Approval)`;
                    listContainer.appendChild(li);
                });
            } else {
                const li = document.createElement('li');
                li.innerHTML = `<span>‚úÖ</span> Sistem dalam kondisi normal.`;
                listContainer.appendChild(li);
            }
        }

        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('open');
        }

        // --- 6. LOGOUT ---
        document.getElementById('btn-logout').addEventListener('click', async () => {
            if(confirm("Keluar dari Admin Panel?")) {
                await supabase.auth.signOut();
                window.location.href = 'login.html';
            }
        });

    </script>
